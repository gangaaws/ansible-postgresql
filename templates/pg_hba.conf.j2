{% for record in postgresql_hba_config -%}
  {{
    record['type'] + ' ' +
    record['database'] + ' ' +
    record['user'] + ' ' +
    (record['address'] + ' ' if 'address' in record else '') +
    (record['netmask'] + ' ' if 'netmask' in record else '') +
    record['method'] +
    (' ' + record['options'] if 'options' in record else '')
  }}
{% endfor -%}
